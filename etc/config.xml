<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Store:etc/config.xsd">
    <default>
        <payment>
            <picpay_standard>
                <active>0</active>
                <model>PicPayStandardFacade</model>
                <title>Picpay</title>
                <mode>2</mode>
                <allowspecific>0</allowspecific>
                <notification>1</notification>
                <use_custom_form>0</use_custom_form>
                <order_status>pending</order_status>
                <customer_cpf_attribute>customer|taxvat</customer_cpf_attribute>
                <address_telephone_attribute>telephone</address_telephone_attribute>
                <iframe_width>500</iframe_width>
                <iframe_height>700</iframe_height>
                <can_initialize>1</can_initialize>
                <can_authorize>1</can_authorize>
                <can_capture>1</can_capture>
                <can_void>1</can_void>
                <can_cancel>1</can_cancel>
                <can_refund>1</can_refund>
                <can_use_checkout>1</can_use_checkout>
                <is_gateway>1</is_gateway>
                <payment_action>authorize</payment_action>
                <hours_to_expires>72</hours_to_expires>
            </picpay_standard>
        </payment>
    </default>
</config>
